<Window x:Class="SimpleATMwpf.CustomerWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleATMwpf"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="450" Width="457">
    <Grid Margin="0,1,2,0" Background="#FF827660">
        <TextBlock x:Name="Title" HorizontalAlignment="Left" Height="50" TextWrapping="Wrap" VerticalAlignment="Top" Width="458" FontSize="25" Background="#FFA89D9D" Margin="-1,-1,0,0"><Run Text=" "/><Run Language="en-gb" Text="  "/><Run Text="Simple Bank ATM"/></TextBlock>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Margin="74,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="324" Height="146" IsEnabled="False" BorderBrush="#FF030305"/>
        <Button x:Name="btn30" Content="£30" HorizontalAlignment="Left" Margin="81,363,0,0" VerticalAlignment="Top" Background="#FFFFBAC4" BorderBrush="Black" FontSize="20" FontWeight="Bold" Width="68" Height="38" Visibility="Hidden" Click="withdrawCash" />
        <Button x:Name="btn20" Content="£20" HorizontalAlignment="Left" Margin="81,316,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.552,0.453" Height="36" Width="67" BorderBrush="Black" Background="#FFFFBAC4" FontSize="20" FontWeight="Bold" Visibility="Hidden" Click="withdrawCash"/>
        <Button x:Name="btn10" Content="£10" HorizontalAlignment="Left" Margin="80,264,0,0" VerticalAlignment="Top" Height="38" Width="67" BorderBrush="Black" Foreground="#FF020101" Background="#FFFFBAC4" FontSize="20" Visibility="Hidden" FontWeight="Bold" RenderTransformOrigin="0.577,0.607" Click="withdrawCash">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="3" Y="4"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="187,378,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.511,0.563" Height="35" Width="100" Background="#FFF74949" BorderBrush="Black" FontSize="20" FontWeight="Bold" Click="btnCancel_Click"/>
        <Button x:Name="btnBalance" Content="Balance" HorizontalAlignment="Left" Margin="189,240,0,0" VerticalAlignment="Top" Width="97" Height="35" BorderBrush="#FF1A1A1A" Background="#FF5240FF" FontSize="20" FontWeight="Bold" Click="btnBalance_Click"/>
        <Button x:Name="btnCash" Content="Cash" HorizontalAlignment="Left" Margin="188,283,0,0" VerticalAlignment="Top" Width="97" Height="34" Background="#FF2FE838" BorderBrush="#FF030303" FontSize="20" FontWeight="Bold" Click="btnCash_Click"/>
        <Button x:Name="btn40" Content="£40" HorizontalAlignment="Left" Margin="320,269,0,0" VerticalAlignment="Top" Height="39" Width="69" Background="#FFFFBAC4" BorderBrush="Black" FontSize="20" FontWeight="Bold" Visibility="Hidden" Click="withdrawCash"/>
        <Button x:Name="btn50" Content="£50" HorizontalAlignment="Left" Margin="319,319,0,0" VerticalAlignment="Top" Height="36" Width="68" BorderBrush="Black" Background="#FFFFBAC4" FontSize="20" FontWeight="Bold" Visibility="Hidden" Click="withdrawCash"/>
        <Button x:Name="btn100" Content="£100" HorizontalAlignment="Left" Margin="320,366,0,0" VerticalAlignment="Top" Height="35" Width="67" Background="#FFFFBAC4" BorderBrush="Black" FontSize="20" FontWeight="Bold" Visibility="Hidden" Click="withdrawCash"/>
        <Button x:Name="btnMiniStmnt" Content="Mini Statement" HorizontalAlignment="Left" Margin="188,332,0,0" VerticalAlignment="Top" Height="38" Width="99" BorderBrush="Black" OpacityMask="Black" Foreground="Black" Background="#FFF9AD21" FontWeight="Bold" Click="btnMiniStmnt_Click"/>

    </Grid>
</Window>
